/* pages/home/home.wxss */

.search-wrapper {
    background-color: aquamarine;
    padding: 0 10rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}

.search {
    background-color: bisque;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 60rpx;
}

.search-wrapper image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.scroll-item {
    margin-bottom: 20rpx;
}


/* 头部标题 */

.item-header {
    background-color: rgb(188, 173, 202);
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.item-header .title {
    color: #494949;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 30rpx;
}

.item-header .click-more {
    color: brown;
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.item-header .arrow {
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #7F7F7F;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
    /* margin-left: 15rpx; */
}


/* items */

.items {
    /* display: flex;
    overflow-x: auto; */
    white-space: nowrap;
    margin-bottom: 20rpx;
    height: 382rpx;
}

.items .item {
    margin: 0 15rpx;
    /* display: inline-block; */
    display: inline-flex;
    flex-direction: column;
    width: 210rpx;
}

.item .movie-image {
    width: 100%;
    height: 301rpx;
    border-radius: 20rpx;
}

.item .movie-title {
    width: 100%;
    font-size: 30rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    overflow: hidden;
}

.item .stars {
    display: flex;
}

.stars .star {
    width: 24rpx;
    height: 24rpx;
}

.item .movie-score-wrapper {
    display: flex;
    align-items: center;
}

.movie-score-wrapper .score-title {
    margin-left: 20rpx;
}