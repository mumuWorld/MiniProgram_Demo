/* pages/list/list.wxss */

.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}


/* items */

.item {
    margin: 0 15rpx;
    /* display: inline-block; */
    display: inline-flex;
    flex-direction: column;
    width: 210rpx;
    height: 382rpx;
    margin: 0 10rpx 20rpx;
}

.item .hidden {
    visibility: hidden;
}

.item .movie-image {
    width: 100%;
    height: 301rpx;
    border-radius: 20rpx;
}

.item .movie-title {
    width: 100%;
    font-size: 30rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    overflow: hidden;
    /* 不换行 */
    white-space: nowrap;
}

.item .stars {
    display: flex;
}

.stars .star {
    width: 24rpx;
    height: 24rpx;
}

.item .movie-score-wrapper {
    display: flex;
    align-items: center;
}

.movie-score-wrapper .score-title {
    margin-left: 20rpx;
}