/* cmps/navigation-bar/navigation-bar.wxss */

.nav-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    font-size: 32rpx;
    font-weight: bold;
}

.icons {
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.icons image {
    height: 32rpx;
    width: 32rpx;
}

.home {
    margin-left: 30rpx;
}